<odoo>
    <record id='wizard_anula_recaudo' model='ir.ui.view'>
        <field name='name'>Wizard Anula Recaudo</field>
        <field name='model'>motgama.wizard.anularecaudo</field>
        <field name='arch' type='xml'>
            <form>
                <group>
                    <p>¿Está seguro que desea anular el recaudo?</p>
                </group>
                <footer>
                    <button name='anular' string='Anular recaudo' type='object' class='btn btn-primary'/>
                    <button special='cancel' string='Cancelar' class='btn'/>
                </footer>
            </form>
        </field>
    </record>

    <record id='wizard_recaudo_factura' model='ir.ui.view'>
        <field name='name'>Wizard Recaudo Factura</field>
        <field name='model'>motgama.wizard.recaudofactura</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='cliente_id' invisible='1'/>
                        <field name='cliente_id' readonly='1'/>
                    </group>
                    <group>
                        <group>
                            <field name='deuda'/>
                        </group>
                        <group>
                            <field name='total'/>
                        </group>
                    </group>
                    <group>
                        <field name='pagos'>
                            <tree>
                                <control>
                                    <create string='Agregar pago'/>
                                </control>
                                <field name="mediopago" options="{'no_create': true}"/>
                                <field name="valor"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button type='object' name='recaudar' string='Recaudar' class='btn btn-primary'/>
                    <button special='cancel' string='Cancelar' class='btn'/>
                </footer>
            </form>
        </field>
    </record>
</odoo>