<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--Tree-->
<record id="tree_view_tema" model="ir.ui.view">
    <field name="name">Tema</field>
    <field name="model">motgama.tema</field>
    <field name="arch" type="xml">
    <tree string="Tema">
        <field name="codigo" />
        <field name="nombre" />
    </tree>
    </field>
</record>
<!--Formulario                                                                                                                              P7.0.4R -->
<record id="form_view_tema" model="ir.ui.view">
    <field name="name">Zona</field>
    <field name="model">motgama.tema</field>
    <field name="arch" type="xml">
    <form string="Tema">
    <sheet>
    <group name="group_bottom">
            <field name="codigo" class="oe_inline"
                placeholder="Ingrese el codigo del tema" />
            <field name="nombre"
                placeholder="Ingrese el nombre del tema" />
            <field name="descripcion"
                placeholder="Ingrese el nombre del tema" />
            <field name="fotografia" 
                widget="image" />
            <field name="active"/>
        </group> 
        
        <group>
                
                <field name="habitacion_ids" />
                
            
        
        </group>
        
        
     
    </sheet>    
    </form>
    </field>
</record>
</odoo>
