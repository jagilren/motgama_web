<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--Tree-->
<record id="tree_view_inmotica" model="ir.ui.view">
    <field name="name">Inmotica</field>
    <field name="model">motgama.inmotica</field>
    <field name="arch" type="xml">
    <tree string="Tema">
        <field name="codigo_habitacion" />
        <field name="estado" />
        <field name="control_accion" />
    </tree>
    </field>
</record>
<!--Formulario-->
<record id="form_view_inmotica" model="ir.ui.view">
    <field name="name">Inmotica</field>
    <field name="model">motgama.inmotica</field>
    <field name="arch" type="xml">
    <form string="Inmotica">
    <sheet>
    <group name="group_bottom">
        <field name="codigo_habitacion" placeholder="Código de la habitación" options="{'no_create_edit': True}" required="1" />
        <field name="estado" placeholder="Estado de la habitación" />
        <field name="control_accion" placeholder="Control de acción de la habitación"/>
            <field name="active"/>
        </group>        
     
    </sheet>    
    </form>
    </field>
</record>
</odoo>
