<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Tree                                                                                                            P7.0.4R -->
    <record id="tree_view_inmotica" model="ir.ui.view">
        <field name="name">inmotica</field>
        <field name="model">motgama.inmotica</field>
        <field name="arch" type="xml">
            <tree string="Inmotica">
                <field name="habitacion"/>
                <field name="parametro"/> 
                <field name="control_accion"/>
                <field name="fecha"/>
                <field name="usuario_uid"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <!--Formulario-->
    <record id="form_view_inmotica" model="ir.ui.view">
        <field name="name">inmotica</field>
        <field name="model">motgama.inmotica</field>
        <field name="arch" type="xml">
        <form string="Inmotica">
            <sheet>
                <group name="group_bottom">
                    <field name="habitacion" />
                    <field name="parametro" />
                    <field name="control_accion" />
                    <!-- <field name="fecha" /> -->
                    <field name="usuario_uid" />
                    <field name="active" />
                </group>
            </sheet>    
        </form>
        </field>
    </record>
</odoo>
