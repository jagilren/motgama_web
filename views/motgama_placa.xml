<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--Tree-->
    <record id="tree_view_placa" model="ir.ui.view">
        <field name="name">Placas</field>
        <field name="model">motgama.placa</field>
        <field name="limit">100</field>
        <field name="arch" type="xml">
            <tree string="Placas">
                <field name="placa"/>
                <field name="descripcion"/>
                <field name="tipovehiculo"/>
                <field name="tipovinculo"/>                
                <field name="descvinculo"/>
            </tree>
        </field>
    </record>
    <!--Form                                                                                                                P7.0.4R -->
    <record id="form_view_placa" model="ir.ui.view">
        <field name="name">Historico de Placas</field>
        <field name="model">motgama.placa</field>
        <field name="limit">100</field>
        <field name="arch" type="xml">
            <form string="Placa" create="true" delete="true" edit="true">
                <sheet>
                    <div class="oe_title">
                    <br/>
                        <field name="placa"/>
                        <field name="descripcion"/>
                        <field name="tipovehiculo"/>
                        <field name="tipovinculo"/>                
                        <field name="descvinculo"/>
                    <br/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>   
</odoo>
