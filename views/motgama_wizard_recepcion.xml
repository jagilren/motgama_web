<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="wizard_asignacion_recepcion" model="ir.ui.view">
            <field name="name">Recepción</field>
            <field name="model">motgama.recepcion.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div style="white-space: pre-line;">
                        <p><h5>Seleccione la recepcion en la cual estaras ?</h5></p>
                    </div>
                    <group>
                        <group>
                            <field name="recepcion_id"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <button type="object" name="button_asignar_wizard" string="Seleccionar" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <act_window
            id="action_wizard_recepcion"               
            res_model="motgama.recepcion.wizard" 
            name="Seleccion Recepción"
            view_type="form"    
            view_mode="form" 
            multi="True"
            target="new"
        />   
</odoo>