    <field name="name">Bonos</field>
    <field name="model">motgama.bonos</field>
    <field name="arch" type="xml">
    <form string="Bonos">
    <sheet>
    <group name="group_bottom">
        <field name="codigo" placeholder="CÃ³digo del bono" options="{'no_create_edit': True}" required="1" />
