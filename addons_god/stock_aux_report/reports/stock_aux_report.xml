<odoo>

    <record id="tree_aux_report" model="ir.ui.view">
        <field name="name">Tree Aux Report</field>
        <field name="model">stock_aux_report.stock_aux_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ubicacion"/>
                <field name="categoria"/>
                <field name="producto"/>
                <field name="costo"/>
                <field name="inicial"/>
                <field name="product_in"/>
                <field name="product_out"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <record id="search_aux_report" model="ir.ui.view">
        <field name="name">Busqueda Reporte auxiliar de inventario</field>
        <field name="model">stock_aux_report.stock_aux_report</field>
        <field name="arch" type="xml">
            <search string="Buscar Reporte">
                <field name="categoria"/>
                <field name="producto"/>
                <field name="ubicacion"/>
                <filter string="Ubicación" name="groupby_ubicacion" context="{'group_by':'ubicacion'}"/>
                <filter string="Categoría" name="groupby_categoria" context="{'group_by':'categoria'}"/>
            </search>
        </field>
    </record>

    <record id="form_aux_report" model="ir.ui.view">
        <field name="name">Form Aux Report</field>
        <field name="model">stock_aux_report.stock_aux_report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="producto"/>
                        </group>
                        <group>
                            <field name="costo"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ubicacion"/>
                        </group>
                        <group>
                            <field name="categoria"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="inicial"/>
                        </group>
                        <group>
                            <field name="product_in"/>
                        </group>
                        <group>
                            <field name="product_out"/>
                        </group>
                        <group>
                            <field name="total"/>
                        </group>
                    </group>
                    <group>
                        <field name="move_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <report id="report_stock_aux_complete"
        model="stock_aux_report.stock_aux_report"
        string="Reporte completo"
        report_type="qweb-pdf"
        name="stock_aux_report.stock_aux_report_complete_template"
        paperformat="stock_aux_report.formato_reporte"/>
    
    <template id="stock_aux_report_complete_template">
        <t t-call="web.html_container">
            <div class="header" style="border-bottom: 2px solid black">
                <h3 class="text-center">Reporte auxiliar de inventario</h3>
            </div>
            <div class="article" style="font-size: 15px;">
                <t t-foreach="docs" t-as="ubicacion">
                    <h4><span t-esc="ubicacion"/></h4>
                    <t t-foreach="docs[ubicacion]" t-as="categoria">
                        <h5><span t-esc="categoria"/></h5>
                        <table style="width: 100%">
                            <thead>
                                <th class="text-center" style="width: 16.8%">Producto</th>
                                <th class="text-center" style="width: 16.8%">Valor</th>
                                <th class="text-center" style="width: 16.6%">Cantidad inicial</th>
                                <th class="text-center" style="width: 16.6%">Cantidad que ingresa</th>
                                <th class="text-center" style="width: 16.6%">Cantidad que sale</th>
                                <th class="text-center" style="width: 16.6%">Total</th>
                            </thead>
                            <tbody>
                                <t t-foreach="docs[ubicacion][categoria]" t-as="doc">
                                    <tr>
                                        <td class="text-center">
                                            <span t-field="doc.producto"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.costo"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.inicial"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.product_in"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.product_out"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.total"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </t>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">Página:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <report id="report_stock_aux"
        model="stock_aux_report.stock_aux_report"
        string="Registros seleccionados"
        report_type="qweb-pdf"
        name="stock_aux_report.stock_aux_report_template"
        paperformat="stock_aux_report.formato_reporte"/>

    <template id="stock_aux_report_template">
        <t t-call="web.html_container">
            <div class="header" style="border-bottom: 2px solid black">
                <h3 class="text-center">Reporte auxiliar de inventario</h3>
            </div>
            <div class="article" style="font-size: 15px;">
                <t t-foreach="docs" t-as="ubicacion">
                    <h4><span t-esc="ubicacion"/></h4>
                    <t t-foreach="docs[ubicacion]" t-as="categoria">
                        <h5><span t-esc="categoria"/></h5>
                        <table style="width: 100%">
                            <thead>
                                <th class="text-center" style="width: 20%">Producto</th>
                                <th class="text-center" style="width: 20%">Cantidad inicial</th>
                                <th class="text-center" style="width: 20%">Cantidad que ingresa</th>
                                <th class="text-center" style="width: 20%">Cantidad que sale</th>
                                <th class="text-center" style="width: 20%">Total</th>
                            </thead>
                            <tbody>
                                <t t-foreach="docs[ubicacion][categoria]" t-as="doc">
                                    <tr>
                                        <td class="text-center">
                                            <span t-field="doc.producto"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.inicial"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.product_in"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.product_out"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="doc.total"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </t>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">Página:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>