<odoo>
    <record id="report_stock_aux_wizard_form" model="ir.ui.view">
        <field name="name">report.stock.aux.wizard.form</field>
        <field name="model">stock.aux.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group>
                        <field name="fecha_inicial"/>
                        <field name="fecha_final"/>
                    </group>
                    <group>
                        <field name="producto_ids" widget="many2many_tags"/>
                        <field name="ubicacion_id"/>
                    </group>
                </group>
                <footer>
                    <button name="button_export_html" string="Ver reporte" type="object" default_focus="1" class="oe_highlight"/>
                    <button name="button_export_pdf" string="Exportar a PDF" type="object"/>
                    <button name="button_export_xlsx" string="Exportar a Excel" type="object"/>
                    <button special="cancel" string="Cancelar" class="btn"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="report_stock_aux_action" model="ir.actions.act_window">
        <field name="name">Reporte Auxiliar de Inventario</field>
        <field name="res_model">stock.aux.report.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="report_stock_aux_menu"
        action="report_stock_aux_action"
        parent="stock.menu_warehouse_report"
        sequence="30"/>

</odoo>
