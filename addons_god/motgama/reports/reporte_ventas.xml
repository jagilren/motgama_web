<odoo>
    <report id="reporte_ventas"
        model="motgama.reporteventas"
        string="Reporte de Ventas"
        report_type="qweb-pdf"
        name="motgama.reporteventas"
        paperformat="motgama.formato_reporte"/>

    <template id="reporteventas">
        <t t-call="web.html_container">
            <div class="header" style="border-bottom: 2px solid black">
                <h3 class="text-center">Reporte de Ventas</h3>
            </div>
            <div class="article">
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <th class="text-center" style="width: 34%">Fecha</th>
                        <th class="text-center" style="width: 33%">Factura</th>
                        <th class="text-center" style="width: 33%">Cliente</th>
                        <th class="text-center" style="width: 33%">Habitación</th>
                        <th class="text-center" style="width: 33%">Valor Total</th>
                        <th class="text-center" style="width: 33%">Medio de pago</th>
                        <th class="text-center" style="width: 33%">Usuario</th>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td class="text-center">
                                    <span t-field="doc.fecha"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="doc.fac"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="doc.cliente"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="doc.habitacion"/>
                                </td>
                                <td class="text-center">
                                    $ <span t-field="doc.valor"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="doc.medio_pago"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="doc.usuario"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <br/>
                <h4>Resumen por productos</h4>
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <th>Categoría de producto</th>
                        <th>Total ventas</th>
                    </thead>
                    <tbody>
                        <t t-foreach="prods" t-as="prod">
                            <tr>
                                <td class="text-center">
                                    <span t-esc="prod.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="prods[prod]"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <br/>
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <th>Medio de pago</th>
                        <th>Total recaudado</th>
                    </thead>
                    <tbody>
                        <t t-foreach="medios" t-as="medio">
                            <tr>
                                <td class="text-center">
                                    <span t-esc="medio.nombre"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="medios[medio]"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <br/>
                <p><span class="font-weight-bold">Total facturas:</span> <span t-esc="count"/><br/>
                <span class="font-weight-bold">Total de ventas:</span> $ <span t-esc="total"/></p>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">Página:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>