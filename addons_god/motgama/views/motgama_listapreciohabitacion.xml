<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--Tree-->
<record id="tree_view_listapreciohabitacion" model="ir.ui.view">
    <field name="name">Lista de precios habitación</field>
    <field name="model">motgama.listapreciohabitacion</field>
    <field name="arch" type="xml">
    <tree string="Lista de Precios">
        <field name="habitacion_id"/>
        <field name="nombrelista"/>
        <field name="tarifaocasional" />
        <field name="tarifamanecida"/>
        <field name="tarifahoradicional"/>
        <field name="active"/>
    </tree>
    </field>
</record>
<!--Formulario                                                                                                              P7.0.4R -->
<record id="form_view_listapreciohabitacion" model="ir.ui.view">
    <field name="name">Lista de precios por habitación</field>
    <field name="model">motgama.listapreciohabitacion</field>
    <field name="arch" type="xml">
        <form string="Lista de Precios">
            <sheet>
                <group name="group_bottom">
                    <field name="habitacion_id"/>
                    <field name="nombrelista"/>
                    <field name="tarifaocasional" />
                    <field name="tarifamanecida"/>
                    <field name="tarifahoradicional"/>
                    <field name="active"/>
                </group>             
            </sheet>    
        </form>
    </field>
</record>
</odoo>
