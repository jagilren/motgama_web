<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <act_window
        id="action_wizard_desasigna"               
        res_model="motgama.wizarddesasigna" 
        name="Desasigna habitacion"
        src_model="motgama.flujohabitacion"
        view_type="form"    
        view_mode="form"
        multi="True"
        target="new"
    />

        <!-- Formulario                                                                                                                     P7.0.4R -->
    <record id="wizard_desasignahabitacion" model="ir.ui.view">
        <field name="name">Desasigna Habitación</field>
        <field name="model">motgama.wizarddesasigna</field>
        <field name="arch" type="xml">
            <form>
                <div style="white-space: pre-line;">
                    <p><h5>Desasigna Habitación</h5></p>
                </div>
                <group>
                    <group>
                        <field name="observacion" required="1"/>
                    </group>
                </group>
                <footer>
                    <button type="object" name="button_desasigna" string="Desasigna" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>